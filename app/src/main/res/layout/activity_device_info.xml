                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_device_serial"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintVertical_bias="0.025"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintHeight_percent="0.05"
                    android:text="设备系列"
                    android:textColor="@color/bg_black"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:textSize="@dimen/x20"
                    />

                <TextView
                    android:id="@+id/tv_device_serial_value"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tv_device_serial"
                    app:layout_constraintVertical_bias="0.025"
                    app:layout_constraintWidth_percent="0.5"
                    app:layout_constraintHeight_percent="0.05"
                    android:gravity="center|right"
                    android:textSize="@dimen/x18"
                    />

                <TextView
                    android:id="@+id/tv_device_type"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintVertical_bias="0.085"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintHeight_percent="0.05"
                    android:text="@string/device_type"
                    android:textColor="@color/bg_black"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:textSize="@dimen/x20"
                    />

                <TextView
                    android:id="@+id/tv_device_type_value"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tv_device_type"
                    app:layout_constraintVertical_bias="0.085"
                    app:layout_constraintWidth_percent="0.5"
                    app:layout_constraintHeight_percent="0.05"
                    android:gravity="center|right"
                    android:textSize="@dimen/x18"
                    />

                <TextView
                    android:id="@+id/tv_device_room"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintVertical_bias="0.145"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintHeight_percent="0.05"
                    android:text="设备所属仓库"
                    android:textColor="@color/bg_black"
                    android:gravity="center|left"
                    android:textStyle="bold"
