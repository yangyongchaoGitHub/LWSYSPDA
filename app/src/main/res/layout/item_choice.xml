<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x180"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_bom_time_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|right"
        android:textSize="18dp"
        android:textColor="@color/bg_black"
        android:textStyle="bold"
        android:text="@string/bom_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.14"/>

    <TextView
        android:id="@+id/tv_bom_time_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="left|center"
        android:textSize="18dp"
        android:textColor="@color/bg_black"
        android:textStyle="bold"
        android:text="2021-1-1-4--909090"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintWidth_percent="0.71"
        app:layout_constraintHeight_percent="0.14"/>

    <TextView
        android:id="@+id/tv_bom_user_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|right"
        android:textSize="18dp"
        android:textColor="@color/bg_black"
        android:textStyle="bold"
        android:text="@string/bom_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.14"/>

    <TextView
        android:id="@+id/tv_bom_user_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="left|center"
        android:textSize="18dp"
        android:textColor="@color/bg_black"
        android:textStyle="bold"
        android:text="这个人"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tv_bom_time_value"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.14"/>

    <TextView
        android:id="@+id/tv_bom_sender_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|right"
        android:textSize="18dp"
        android:textColor="@color/bg_black"
        android:textStyle="bold"
        android:text="@string/bom_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.14"/>

    <TextView
        android:id="@+id/tv_bom_sender_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="left|center"
        android:textSize="18dp"
        android:textColor="@color/bg_black"
        android:textStyle="bold"
        android:text="这个人"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintWidth_percent="0.71"
        app:layout_constraintHeight_percent="0.14"
        />

    <TextView
        android:id="@+id/tv_show_bom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edittext_rect_blue"
        android:text="@string/show_bom"
        android:gravity="center"
        android:textColor="@color/bg_white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_show_choice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edittext_rect_blue"
        android:text="@string/go_choice"
        android:gravity="center"
        android:textColor="@color/bg_white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

