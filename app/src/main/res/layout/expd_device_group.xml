<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edittext_rect_white"
    android:layout_marginTop="@dimen/x6"
    >

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/x45"
        android:gravity="center_vertical"
        android:text="人脸识别闸机头"
        android:textSize="@dimen/x20"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="@dimen/x30"/>

    <ImageView
        android:id="@+id/iv_group_icon"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x45"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/x30"/>

    <TextView
        android:id="@+id/tv_group_selector"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x45"
        android:gravity="center|right"
        android:text="5/6"
        app:layout_constraintEnd_toStartOf="@+id/iv_group_icon"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/iv_fitting_group_delete"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/x45"
        android:text="@string/delete"
        android:textColor="@color/bg_red"
        android:gravity="center"
        android:textSize="@dimen/x18"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/x30"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/iv_fitting_count"
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/x45"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/iv_fitting_group_delete"/>

</androidx.constraintlayout.widget.ConstraintLayout>

